{
  "name": "bte/mail.bte-atm",
  "description": "Mail wrapper",
  "type": "project",
  "license": "BSD-3-Clause",
  "require": {
    "php": ">=7.0.0",
    "yiisoft/yii2": "~2.0.5",
    "yiisoft/yii2-bootstrap": "~2.0.0",
    "yiisoft/yii2-swiftmailer": "~2.0.0",
    "bower-asset/html5shiv": "*",
    "bower-asset/respond": "*",
    "notamedia/yii2-sentry": "^1.2",
    "kartik-v/yii2-widget-datepicker": "*",
    "kartik-v/yii2-field-range": "*",
    "php-mime-mail-parser/php-mime-mail-parser": "^2.8",
    "easybook/geshi": "v1.0.8.18",
    "php-amqplib/php-amqplib": "^2.6",
    "elasticsearch/elasticsearch": "^5.1"
  },
  "require-dev": {
    "yiisoft/yii2-debug": "~2.0.0",
    "yiisoft/yii2-gii": "~2.0.0",
    "yiisoft/yii2-faker": "~2.0.0",
    "codeception/base": "^2.2.3",
    "codeception/verify": "~0.3.1",
    "codeception/specify": "~0.4.3"
  },
  "autoload": {
    "files": [
      "components/lib.php"
    ]
  },
  "config": {
    "process-timeout": 1800
  },
  "scripts": {
    "messages": "php yii message @app/config/message.php; php yii message @app/modules/admin/config/message.php; php yii message @app/modules/main/config/message.php; php yii message @app/modules/user/config/message.php; php yii message @app/modules/mail/config/message.php"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ]
}
